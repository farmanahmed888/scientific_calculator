pipeline {
    agent any
    environment {
        // PATH = "/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin:${env.PATH}"
        PATH = "/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin:/usr/local/bin/docker:${env.PATH}"


        DOCKER_IMAGE_NAME = 'scientific_calculator'
        DOCKER_CREDENTIALS_ID = 'DockerHubCred'
    }
    tools {
        maven 'Maven'  
        dockerTool 'Docker' 
        ansible 'Ansible' 
    }
    stages {
        stage('Checkout') {
            steps {
                script {
                    git branch: 'main', url: 'https://github.com/farmanahmed888/scientific_calculator.git'
                }
            }
        }
        stage('Maven Build') {
            steps {
                script {
                    sh 'mvn clean install'
                }
            }
        }
        stage('Check Docker Path') {
            steps {
                script {
                    sh 'echo $PATH'
                    sh 'which docker'
                }
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    sh 'docker build -t farmanahmed888/scientific_calculator:latest .'
                    sh "docker images"
                }
            }
        }
        stage('Push Docker Image') {
            steps {
                script {
                    
                    docker.withRegistry('', 'DockerHubCred') {
                        sh "docker tag scientific_calculator farmanahmed888/scientific_calculator:latest"
                        sh "docker push farmanahmed888/scientific_calculator:latest"
                    }
                }
            }
        }
        stage('Run Ansible Playbook') {
            steps {
                script {
                    sh "ansible-playbook -i inventory deploy.yml"
                }
            }
        }
    }
}
